<Window x:Class="Aknakereso.RecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rekordok"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="10">

        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">

            <TextBlock Text="Nehezseg:"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,10,0"/>

            <ComboBox x:Name="DifficultyCombo"
                      Width="120"
                      SelectionChanged="DifficultyCombo_SelectionChanged"
                      Margin="0,0,10,0">
                <ComboBoxItem Content="Konnyu"/>
                <ComboBoxItem Content="Kozepes"/>
                <ComboBoxItem Content="Nehez"/>
            </ComboBox>

        </StackPanel>

        <DataGrid x:Name="RecordsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ido (mp)"
                                    Binding="{Binding TimeSeconds}"
                                    Width="*"/>
                <DataGridTextColumn Header="Datum"
                                    Binding="{Binding PlayedAt}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
